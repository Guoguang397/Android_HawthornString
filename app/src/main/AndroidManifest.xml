<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.edu.nefu.HawthornString">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HawthornString">
        <activity
            android:name=".GameOverActivity"
            android:exported="false" />
        <activity
            android:name=".RankListActivity"
            android:exported="false" />
        <activity
            android:name=".HomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <service
            android:name=".SoundService"
            android:enabled="true"
            android:exported="false" />

        <receiver
            android:name=".MainActivity$GameOverBroadcastReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="cn.edu.nefu.HawthornString.GameoverAction" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".MainActivity"
            android:exported="true">

        </activity>

        <meta-data
            android:name="preloaded_fonts" />
    </application>

</manifest>